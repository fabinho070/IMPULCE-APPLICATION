datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

//CRIANDO PELO PRISMA UMA TABELA NO BANCO DE DADOS DE USUARIO
// O @@MAP NO FINAL Ã‰ O QUE DEFINE O NOME DA TABELA NO BANCO DE DADOS
// O @ID @DEFAULT QUER DIZER QUE ELA VAI SER UMA FORENG KEY NO BANCO, PARA RELACIONAR COM OUTRAS TABELAS

model User {
  id         String @id @default(uuid())
  name       String
  github_id  Int
  login      String
  avatar_url String


  messages Message[]
  @@map("users")
}

model Message {
  id         String   @id @default(uuid())
  text       String
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id])

  user_id String
  @@map("messages")
}
